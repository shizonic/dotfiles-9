set runtimepath=~/.config/pentadactyl
group user

set defsearch=duckduckgo
set findcase=smart
set editor='termite -e "vim +<line> <file>"'

" mappings
nmap -b <leader>a :addons<cr>
nmap -b <leader>d :downloads<cr>
nmap -b <leader>m :messages<cr>
nmap -b <leader>p :private winopen<cr>
nmap -b h 6h
nmap -b j 6j
nmap -b k 6k
nmap -b l 6l

" launch videos
nmap -builtin x ;l
nmap <A-x> :launchv<cr>

" commands
command dark :colorscheme gruvbox-dark | colorscheme hints | set! extensions.stylish.styleRegistrationEnabled=true | set! layout.css.devPixelsPerPx='1.5'
command light :hi clear | colorscheme solarized-light | colorscheme hints | set! extensions.stylish.styleRegistrationEnabled=false | set! layout.css.devPixelsPerPx='-1'

" firefox prefs
set! browser.download.useDownloadDir=false
set! browser.safebrowsing.enabled=false
set! browser.safebrowsing.malware.enabled=false
set! browser.search.defaultenginename.US='DuckDuckGo'
set! browser.search.suggest.enabled=false
set! browser.startup.page=0
set! browser.tabs.closeWindowWithLastTab=false
set! browser.tabs.warnOnClose=false
set! datareporting.healthreport.uploadEnabled=false
set! extensions.newtaboverride@agenedia.com.type='about:blank'
set! extensions.ublock0.forceLegacyToolbarButton=true
set! extensions.umatrix.forceLegacyToolbarButton=true
set! general.autoScroll=true
set! media.peerconnection.ice.default_address_only=true
set! network.cookie.cookieBehavior=2
set! network.cookie.prefsMigrated=true
set! privacy.donottrackheader.value=1
set! privacy.trackingprotection.pbmode.enabled=false
set! security.ssl.require_safe_negotiation=true
set! signon.rememberSignons=false

colorscheme solarized-light
colorscheme hints
