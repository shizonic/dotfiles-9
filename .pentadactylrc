set runtimepath=~/.config/pentadactyl
group user

set defsearch=duckduckgo
set findcase=smart
set editor='termite -e "vim +<line> <file>"'

" mappings
nmap -b <leader>a :addons<cr>
nmap -b <leader>d :downloads<cr>
nmap -b <leader>m :messages<cr>
nmap -b <leader>p :private winopen<cr>
nmap -b h 6h
nmap -b j 6j
nmap -b k 6k
nmap -b l 6l

" launch videos
nmap -builtin x ;l
nmap <A-x> :launchv<cr>

" commands
command dark :colorscheme gruvbox-dark | :colorscheme hints | :set! extensions.stylish.styleRegistrationEnabled=true
command light :hi clear | :colorscheme solarized-light | :colorscheme hints | :set! extensions.stylish.styleRegistrationEnabled=false

" firefox prefs
set! browser.newtab.url=about:blank
set! browser.newtabpage.directory.source=''
set! browser.newtabpage.directory.ping=''
set! cookieaccept=none
set! noscript.notify=false
set! extensions.ublock0.forceLegacyToolbarButton=true
set! extensions.umatrix.forceLegacyToolbarButton=true

" require websites preform safe ssl negotiation
set! security.ssl.require_safe_negotiation=true

colorscheme solarized-light
colorscheme hints
