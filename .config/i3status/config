# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#b8bb26"
        color_bad = "#fb4934"
        color_degraded = "#fabd2f"
        separator = ""
        output_format = "i3bar"
        interval = 5
}

order += "volume master"
#order += "ipv6"
#order += "disk /"
#order += "disk /home"
#order += "disk /mnt/hdd"
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless wlp8s0"
#order += "ethernet eth0"
order += "load"
order += "cpu_temperature 0"
order += "tztime local"

wireless wlp8s0 {
        format_up = "W: (%quality at %essid)"
        format_down = "W: down"
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

run_watch DHCP {
        pidfile = "/var/run/dhcpcd*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

cpu_temperature 0 {
	format = "T: %degrees °C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
}

disk "/" {
        format = "/: %free"
}


disk "/home" {
        format = "/home: %free"
}

disk "/mnt/hdd" {
        format = "HDD: %free"
}

volume master {
	format = "♪: %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
